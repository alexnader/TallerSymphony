{%extends 'layout.html.twig' %}
{% block body %}
    {{parent()}}
 <div class="container">
     <div class="col-md-12">
         <div class="page-header margin-none">
             <h2 class="padding-none">Productos</h2>
             <a href="{{path('emm_product_add')}}" class="btn btn-success">Add</a>
         </div>
         <div class="table-responsive">
         
    <table class="table table-striped table-hover">
    <tr>
        <th>Codigo</th>
        <th>Nombre</th>
        <th>Descripcion</th>
        <th>Marca</th>
        <th>Categoria</th>
        <th>precio</th>        
    </tr>
    {% for product in products %}
        <tr>
            <td>{{product.codigo}}</td>
            <td>{{product.nombre}}</td>
            <td>{{product.descripcion}}</td>
            <td>{{product.marca}}</td>
            <td>{{product.categoria}}</td>
            <td>{{product.precio}}</td>
            <td>
                
                <a href="{{path('emm_product_edit',{id:product.id})}}" class="btn btn-sm btn-primary">Edit</a>
                <a href="{{path('emm_product_delete',{id:product.id})}}" class="btn btn-sm btn-danger btn-delete" onclick="return confirm('Seguro que desea eliminar el registro?')">Delete</a>
            </td>
          </tr>
            
        {% endfor %}
        
            
    </tbody>
    </table>
         </div>
        
    </div>
 </div>
</table>
{% endblock %}